
<div class="container-fluid bg-light ">
    <form action="/" method="POST"> 
    <div class="row align-items-center justify-content-center">
                          
                          <div class="col-md-2 pt-3">
                       
                          <div class="form-group">
                            <input type="text" id="searchjob" name="jobtitle" class="form-control" placeholder="Search by Jobtitle" style="width:100%" >
                          
                         </div>
                      </div>
                      <div class="col-md-2 pt-3">
                          <div class="form-group">
                            <select id="inputState" class="form-control" name="experiencelevel">
                              <option value="" selected disabled hidden> Choose Experience Level</option>
                          <option value="Beginners">Beginners</option>
                          <option value="Intermediate">Intermediate</option>
                          <option value="Expert">Expert</option>
                            </select>
                          </div>
                      </div>
                      <div class="col-md-2 pt-3">
                          <div class="form-group">
                            <select id="inputState" class="form-control"  name="jobtype">
                              <option value="" selected disabled hidden> Choose Job Type</option>
                        <option value="Full Time">Full Time</option>
                        <option value="Part Time">Part Time</option>
                        <option value="FreeLance">FreeLance</option>
                        <option value="Internship">Intership</option>
                        <option value="Hourly Paid">Hourly Paid</option>
                        </select>
                            </select>
                          </div>
                      </div>
                      <div class="col-md-2">
                       <button type="submit" class="btn btn-primary btn-block">Search</button>
                     
                    </div>
                </div>
  
              </form>           
                            
  </div>
  <script>
    $(function(){
   $('#searchjob').autocomplete({
   source: function(req,res){
     $.ajax({
       url:"autocomplete/",
       dataType:"jsonp",
       type:"GET",
       data:req,
       success: function(data){
         res(data)
       },
       error: function(err){
         console.log(err.status);
       }
     });
   },
   minLength:1,
   select: function(event,ui){
     if(ui.item){
       $('#searchjob').val(ui.item.label);
     }
   }
   });
     });
     </script> 
      


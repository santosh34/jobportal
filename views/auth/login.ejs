<%- include('../partials/header.ejs') %> 

<body>
<div class="login-form pt-5" style="width:35%" >    
    <form action="/employeehomepage" method="POST">
		<div class="avatar"><i class="material-icons">&#xE7FF;</i></div>
        <h4 class="modal-title">Employee Login to Your Account</h4>
        <% if(hasErrors) {%>
			<% for(var i = 0; i <messages.length; i++) {%>
				<div class="alert alert-danger">
				   <a href="#" class="close" data-dismiss="alert" aria-label="close">
					   &times;
				   </a>
				   <%= messages[i] %>
					
				</div>
			<% } %>
		<% } %>

        <div class="form-group">
            <input type="text" class="form-control"  name="email" placeholder="Email" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" required="required">
        </div>
         
        <input type="submit" class="btn btn-primary btn-block btn-lg" >              
    </form>			
    <div class="text-center small">Don't have an account? <a href="/register">Sign up</a></div>
</div>
<%- include('../partials/fotter.ejs') %> 

<%- include('../partials/header2.ejs') %> 
<%- include('../partials/jobseekermenu.ejs') %>   

<div class="col main p-10 ml-5">
    <h1 class="display-4 d-none d-sm-block">

    

     <% if(job){%>
    <% if((job.length) ==0){%>
        <h1>Sorry, you didn't posted any job yet!</h1>
    <% }else{ %>
    <% for(let i=0;i<job.length; i++) { %>
    <div class="row mb-5">
        <div class="col-xl-12">
            <div class="card bg-success text-dark h-100">
                <div class="card-body bg-light">
                    <div class="rotate">
                        <h6>Company Name:<%= job[i].jobtitle%> </h6>
                        <h6>Job Title:<%= job[i].jobtype %> </h6>
                        <h6>Job level :<%= job[i].jobexperiencelevel%></h6>
                        <h6>Post at :<%= job[i].jobpostdate %></h6>
                        <h6>Time Ago:<%= moment(job[i].jobpostdate,"dddd, MMMM Do YYYY, h:mm:ss a").fromNow() %></h6>
                    </div>
                    <h6 class="text-uppercase"><%= job[i].skills %> </h6>
                    
                    <div class="rotate " >
                   <a href="/jobseeker/appllyforjob/<%= job[i]._id %> " value="Test" id="testBtn" onclick="doOnClick();"
                    class="btn btn-primary btn- danger"  role="button" aria-pressed="true">apply</a>
                 </div>
                </div>
            </div>
        </div>
     </div>
   <% } %>
    <% } %>
    
<% } %>

<script>
    function doOnClick(){
        document.getElementById('testBtn').value = 'Ok tested';
        return false
    }
</script>